{
  "RecipeFormatVersion": "2020-01-25",
  "ComponentName": "com.edge.llm.ChatBotUI",
  "ComponentVersion": "1.0.0",
  "ComponentDescription": "Interactive ChatBot web interface for querying sensor data",
  "ComponentPublisher": "EdgeLLM",
  "ComponentDependencies": {},
  "ComponentConfiguration": {
    "DefaultConfiguration": {
      "webPort": 8080,
      "chatHistoryLimit": 50,
      "enableDebugMode": true,
      "sensorDataRetentionHours": 24
    }
  },
  "Manifests": [
    {
      "Platform": {
        "os": "linux"
      },
      "Lifecycle": {
        "Install": "pip3 install -r {artifacts:path}/requirements.txt --index-url https://download.pytorch.org/whl/cpu",
        "Run": "python3 -u {artifacts:path}/simple_chatbot.py"
      },
      "Artifacts": [
        {
          "URI": "http://component-server/components/com.edge.llm.ChatBotUI/1.0.0/simple_chatbot.py"
        },
        {
          "URI": "http://component-server/components/com.edge.llm.ChatBotUI/1.0.0/requirements.txt"
        }
      ]
    }
  ]
}