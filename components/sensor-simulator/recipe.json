{
  "RecipeFormatVersion": "2020-01-25",
  "ComponentName": "com.edge.llm.SensorSimulator",
  "ComponentVersion": "1.0.0",
  "ComponentDescription": "Industrial sensor data simulator",
  "ComponentPublisher": "EdgeLLM",
  "ComponentConfiguration": {
    "DefaultConfiguration": {
      "sensorCount": 5,
      "samplingIntervalMs": 5000,
      "anomalyProbability": 0.05,
      "sensors": {
        "temperature": {
          "min": 20,
          "max": 80,
          "unit": "celsius"
        },
        "pressure": {
          "min": 100,
          "max": 200,
          "unit": "kPa"
        },
        "vibration": {
          "min": 0,
          "max": 10,
          "unit": "mm/s"
        }
      }
    }
  },
  "Manifests": [
    {
      "Platform": {
        "os": "linux"
      },
      "Lifecycle": {
        "Install": "pip3 install -r {artifacts:path}/requirements.txt",
        "Run": "python3 -u {artifacts:path}/simple_sensor_gen.py"
      },
      "Artifacts": [
        {
          "URI": "http://component-server/components/com.edge.llm.SensorSimulator/1.0.0/simple_sensor_gen.py"
        },
        {
          "URI": "http://component-server/components/com.edge.llm.SensorSimulator/1.0.0/requirements.txt"
        }
      ]
    }
  ]
}