{
  "dashboard": {
    "id": null,
    "uid": "edge-llm-iot",
    "title": "Edge LLM Industrial IoT Dashboard",
    "tags": ["iot", "edge", "llm", "industrial"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
        "type": "timeseries",
        "title": "Temperature Sensors",
        "datasource": "InfluxDB",
        "targets": [
          {
            "query": "from(bucket: \"greengrass_telemetry\") |> range(start: -1h) |> filter(fn: (r) => r[\"_measurement\"] == \"EdgeLLM/Sensors\" and r[\"sensor_type\"] == \"temperature\") |> aggregateWindow(every: 30s, fn: mean)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "celsius",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 60},
                {"color": "red", "value": 75}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
        "type": "timeseries",
        "title": "Pressure Sensors",
        "datasource": "InfluxDB",
        "targets": [
          {
            "query": "from(bucket: \"greengrass_telemetry\") |> range(start: -1h) |> filter(fn: (r) => r[\"_measurement\"] == \"EdgeLLM/Sensors\" and r[\"sensor_type\"] == \"pressure\") |> aggregateWindow(every: 30s, fn: mean)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "kPa",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 180},
                {"color": "red", "value": 195}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0},
        "type": "timeseries",
        "title": "Vibration Sensors",
        "datasource": "InfluxDB",
        "targets": [
          {
            "query": "from(bucket: \"greengrass_telemetry\") |> range(start: -1h) |> filter(fn: (r) => r[\"_measurement\"] == \"EdgeLLM/Sensors\" and r[\"sensor_type\"] == \"vibration\") |> aggregateWindow(every: 30s, fn: mean)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "mm/s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 7},
                {"color": "red", "value": 9}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 8},
        "type": "table",
        "title": "LLM Analysis Results",
        "datasource": "InfluxDB",
        "targets": [
          {
            "query": "from(bucket: \"greengrass_telemetry\") |> range(start: -1h) |> filter(fn: (r) => r[\"_measurement\"] == \"EdgeLLM/Analysis\") |> last() |> keep(columns: [\"_time\", \"name\", \"analysis\", \"severity\", \"sensor_id\"])"
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{"desc": true, "displayName": "_time"}]
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 5, "w": 6, "x": 12, "y": 8},
        "type": "stat",
        "title": "Anomalies (Last Hour)",
        "datasource": "InfluxDB",
        "targets": [
          {
            "query": "from(bucket: \"greengrass_telemetry\") |> range(start: -1h) |> filter(fn: (r) => r[\"_measurement\"] == \"EdgeLLM/Sensors\" and r[\"is_anomaly\"] == \"True\") |> count()"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "fields": "",
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 5, "w": 6, "x": 18, "y": 8},
        "type": "gauge",
        "title": "System Health Score",
        "datasource": "InfluxDB",
        "targets": [
          {
            "query": "from(bucket: \"greengrass_telemetry\") |> range(start: -5m) |> filter(fn: (r) => r[\"_measurement\"] == \"EdgeLLM/Sensors\") |> count() |> map(fn: (r) => ({r with _value: if r._value > 100 then 100.0 else float(v: r._value)}))"
          }
        ],
        "options": {
          "orientation": "auto",
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "max": 100,
            "min": 0,
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 30},
                {"color": "green", "value": 70}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 5, "w": 12, "x": 12, "y": 13},
        "type": "logs",
        "title": "Recent LLM Insights",
        "datasource": "InfluxDB",
        "targets": [
          {
            "query": "from(bucket: \"greengrass_telemetry\") |> range(start: -30m) |> filter(fn: (r) => r[\"_measurement\"] == \"EdgeLLM/Analysis\" and r[\"severity\"] != \"info\") |> keep(columns: [\"_time\", \"analysis\"]) |> sort(columns: [\"_time\"], desc: true) |> limit(n: 10)"
          }
        ]
      }
    ]
  }
}